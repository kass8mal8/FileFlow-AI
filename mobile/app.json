{
  "expo": {
    "name": "FileFlow AI",
    "slug": "fileflow-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fileflow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fileflow.ai",
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch",
          "processing"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.fileflow.ai",
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "config": {
        "pwa": {
          "manifest": {
            "name": "FileFlow AI",
            "short_name": "FileFlow",
            "description": "Intelligent File and Email Management with AI",
            "start_url": ".",
            "display": "standalone",
            "orientation": "portrait",
            "theme_color": "#7C3AED",
            "background_color": "#0F172A",
            "icons": [
              {
                "src": "./assets/images/icon.png",
                "sizes": [96, 128, 192, 256, 384, 512],
                "type": "image/png"
              }
            ]
          }
        }
      }
    },
    "plugins": [
      "expo-router",
      "expo-updates",
      [
        "expo-calendar",
        {
          "calendarPermission": "Allow FileFlow AI to add tasks to your calendar."
        }
      ],
      "expo-web-browser",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "841d41cb-e8c4-41c2-850e-08c144063e83"
      }
    }
  }
}
